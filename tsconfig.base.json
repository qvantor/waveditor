{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@waveditors/editor-model": ["libs/editor-model/src/index.ts"],
      "@waveditors/email-render": ["libs/email-render/src/index.ts"],
      "@waveditors/layout-editor": ["libs/layout-editor/src/index.ts"],
      "@waveditors/layout-render": ["libs/layout-render/src/index.ts"],
      "@waveditors/rxjs-react": ["libs/rxjs-react/src/index.ts"],
      "@waveditors/text-editor": ["libs/text-editor/src/index.ts"],
      "@waveditors/theme": ["libs/theme/src/index.ts"],
      "@waveditors/ui-kit": ["libs/ui-kit/src/index.ts"],
      "@waveditors/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
